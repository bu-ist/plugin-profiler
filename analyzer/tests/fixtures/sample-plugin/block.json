{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "sample-plugin/sample-block",
  "title": "Sample Block",
  "category": "widgets",
  "description": "A simple sample block for testing.",
  "keywords": ["sample", "test"],
  "attributes": {
    "message": {
      "type": "string",
      "default": ""
    },
    "count": {
      "type": "number",
      "default": 0
    }
  },
  "supports": {
    "html": false,
    "align": true
  },
  "editorScript": "file:./src/index.js",
  "editorStyle": "file:./src/editor.css",
  "style": "file:./src/style.css",
  "render": "templates/render.php"
}
